                  android:label="@string/app_name" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="DescriptionActivity" android:name="DescriptionActivity" android:screenOrientation="landscape"></activity>
        <activity android:label="CreateActivity" android:name="CreateActivity" android:screenOrientation="landscape"></activity>
