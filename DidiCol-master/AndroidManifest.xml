      <activity android:label="KaraokeActivity" android:name="KaraokeActivity" android:screenOrientation="landscape"></activity>
	 <activity android:label="ArgumentatorActivity" android:name="ArgumentatorActivity" android:screenOrientation="landscape"></activity>
	<activity android:label="CorrectionActivity" android:name="CorrectionActivity" android:screenOrientation="landscape"></activity>
	<activity android:label="DrawActivity" android:name="DrawActivity" android:screenOrientation="landscape"></activity>
	<activity android:label="LoadActivity" android:name="LoadActivity" android:screenOrientation="landscape"></activity>
			<activity android:label="FinalActivity" android:name="FinalActivity" android:screenOrientation="landscape"></activity>
	
		<activity android:label="EtapaActivity" android:name=".etapas.EtapaActivity" android:screenOrientation="landscape"></activity>
    	<activity android:label="EndingActivity" android:name="EndingActivity" android:screenOrientation="landscape"></activity>
    	
    </application>


	
</manifest>
